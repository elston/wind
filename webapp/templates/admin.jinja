<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="table-title"><span style="font-size: 30px">Users</span>
            </div>
            <div class="filter-pager">
                <form class="form-inline">
                    <button type="button" class="btn btn-info" data-toggle="modal"
                            data-target="#new-user-dialog">New user
                    </button>
                </form>
            </div>

            <div id="users-table"></div>

        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="change-password-dialog" tabindex="-1" role="dialog"
     aria-labelledby="change-password-dialog-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4>Change password</h4>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" id="change-password-form">
                        <input type="hidden" id="user-id" name="user-id">

                        <div class="form-group">
                            <label for="pass1" class="col-xs-5">New password: </label>

                            <div class="col-xs-7">
                                <input type="password" id="pass1" name="pass1" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="pass2" class="col-xs-5">New password again: </label>

                            <div class="col-xs-7">
                                <input type="password" id="pass2" name="pass2" class="form-control"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="change-password" class="btn btn-primary" disabled>Change</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="new-user-dialog" tabindex="-1" role="dialog"
     aria-labelledby="new-user-dialog-label">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="new-user-dialog-label">Add new user</h4>
            </div>

            <div class="modal-body">
                <div class="container-fluid">
                    <form class="form-horizontal" id="new-user-form">

                        <div class="form-group has-error" id="email-group">
                            <label for="user-email" class="col-xs-2">E-mail: </label>

                            <div class="col-xs-10">
                                <input type="email" id="user-email" name="user-email" class="form-control"/>
                            </div>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="user-active" name="user-active" value="active">Active
                            </label>
                        </div>

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" id="user-admin" name="user-admin" value="admin">Admin
                            </label>
                        </div>

                        <div class="form-group pass-equal has-error">
                            <label for="user-pass1" class="col-xs-2">Password: </label>

                            <div class="col-xs-10">
                                <input type="password" id="user-pass1" name="user-pass1" class="form-control"/>
                            </div>
                        </div>

                        <div class="form-group pass-equal has-error">
                            <label for="user-pass2" class="col-xs-2">Password again: </label>

                            <div class="col-xs-10">
                                <input type="password" id="user-pass2" name="user-pass2" class="form-control"/>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="new-user" class="btn btn-primary" disabled>Add</button>
            </div>
        </div>
    </div>
</div>